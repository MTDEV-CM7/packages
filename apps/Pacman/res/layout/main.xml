<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/bottombar"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar" style="@android:style/ButtonBar">
        <Button android:id="@+id/main_btn_ok"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:text="@string/main_btn_ok" android:layout_weight="1" />
        <Button android:id="@+id/main_btn_selectall"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:text="@string/main_btn_selectall"
            android:layout_weight="1" />
        <Button android:id="@+id/main_btn_cancel"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:text="@string/main_btn_cancel"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView android:layout_width="fill_parent"
        android:id="@+id/listview"
        android:layout_height="fill_parent" android:layout_marginBottom="20dip"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottombar"
        >
    </ListView>
</RelativeLayout>
